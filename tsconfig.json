{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "bundler",
    "module": "esnext",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["./"]
}
